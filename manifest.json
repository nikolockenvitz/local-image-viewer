{
  "manifest_version": 2,
  "name": "File Viewer",
  "version": "0.2",
  "description": "Extension to view local files in browser. Navigate to previous or next file by using arrow keys.",
  "content_scripts": [
    {
      "matches": [
        "file://*/*"
      ],
      "js": ["cs.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://nikolockenvitz.github.io/firefox-addon-file-viewer/updates.json"
    }
  }
}